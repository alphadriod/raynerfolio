const projects = [
  {
    title: "Sweet Tooth Cakes & Treats",
    subtitle:
      "A full-featured e-commerce platform built for a high-volume bakery.",
    description:
      "Designed and developed a custom e-commerce solution using WordPress and WooCommerce. I implemented custom PHP functionalities for order management and delivery scheduling, optimized the MySQL database for performance, and ensured a secure payment gateway integration. This project directly contributed to a 40% increase in the client's online sales.",
    image: "/images/sweettooth.png", // Save your screenshot as sweettooth.png
    tools: ["WordPress", "PHP", "WooCommerce", "MySQL"],
    live: "https://sweettoothcakesandtreats.com/",
  },
  {
    title: "Jeje Capital",
    subtitle: "Automated Crypto Trading Bot Platform & SaaS.",
    description:
      "A production-ready SaaS platform for automated crypto futures trading. I architected and built the entire frontend application, including the responsive marketing site, user dashboard, and complex compounding tools. Integrated secure authentication and real-time data visualization to deliver a seamless user experience for subscribers.",
    image: "/images/jeje.png",
    tools: ["Next.js", "TypeScript", "Tailwind CSS", "Authentication"],
    live: "https://jejecapital.com/",
  },
  {
    title: "Real-time Chat App",
    subtitle: "Socket.io powered messaging with authentication",
    description:
      "Full-stack real-time messaging application. Implemented WebSocket connections for instant communication, Firebase Authentication for secure user sessions, and a responsive UI. This project highlights my understanding of backend event-driven architecture.",
    image: "/assets/projects.jpg",
    tools: ["React", "Socket.io", "Firebase", "Node.js"],
    // github: "https://github.com/alphadriod/chat-app", // TODO: Add real link
    live: "https://mychatapp.netlify.app",
  },
];
---

<section class="space-y-24 mx-auto mt-20 md:mt-40 px-4 max-w-5xl" id="projects">
  <h1 class="mb-2 font-bold text-3xl md:text-4xl">Featured Projects</h1>
  <div class="bg-primary mb-6 rounded w-20 h-1"></div>

  {
    projects.map((project, index) => {
      return (
        <div
          class={`items-center gap-10 md:gap-32 grid md:grid-cols-2 ${
            index % 2 !== 0 ? "md:[&>*:first-child]:order-2" : ""
          }`}
          data-aos={index % 2 === 0 ? "fade-right" : "fade-left"}
          data-aos-delay={`${100 * index}`}
        >
          <div>
            <h3 class="mb-4 font-bold text-2xl md:text-3xl">{project.title}</h3>
            <p class="mb-4 text-gray-500 leading-relaxed">
              {project.description}
            </p>
            <div class="flex flex-wrap gap-2 cursor-pointer">
              {project.tools.map((tool) => (
                <span class="border-primary badge-outline badge">{tool}</span>
              ))}
            </div>
          </div>

          <div class="flex justify-center">
            <a href={project.live} target="_blank">
              <img
                src={project.image}
                alt={project.title}
                loading="lazy"
                class="shadow-lg rounded-2xl w-full max-w-md h-full object-cover hover:scale-105 transition duration-300 ease-in-out"
              />
            </a>
          </div>
        </div>
      );
    })
  }

  <!-- See More -->
  <div class="mt-12 text-center">
    <a
      href="https://github.com/alphadriod"
      target="_blank"
      class="inline-block px-6 py-2 rounded-field btn-outline font-semibold hover:scale-105 transition-transform duration-200 ease-in-out btn btn-primary"
    >
      See More on GitHub
    </a>
  </div>
</section>
